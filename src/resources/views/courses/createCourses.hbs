<div class="mt-4">
    <h3>Đăng khóa học</h3>
    <form method="post" action="/courses/store"> 
  <div class="mb-3">
    <label for="description" class="form-label">Mô tả khóa học</label>
    <input type="text" class="form-control" id="description" aria-describedby="description">
   
  </div>
    <div class="mb-3">
    <label for="name" class="form-label">Tên khóa học</label>
    <input type="text" class="form-control" id="name" name="name" aria-describedby="name">
   
  </div>
    <div class="mb-3">
    <label for="video_id" class="form-label">Video ID:</label>
    <input type="text" class="form-control" id="video_id" name="video_id" aria-describedby="description">
   
  </div>
    <div class="mb-3">
    <label for="level" class="form-label">Trình độ khóa học</label>
    <input type="text" class="form-control" id="level" name="level" aria-describedby="description">
   
  </div>
  
  <button type="submit" class="btn btn-primary">Thêm khóa học</button>
</form>
</div>