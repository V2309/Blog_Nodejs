<div class="mt-4">
    <h3>Cập nhật khóa học</h3>
   <form method="POST" action="/courses/{{course.id}}?_method=PUT">
        <div class="mb-3">
            <label for="name" class="form-label">Tên khóa học</label>
            <input 
                type="text" 
                class="form-control" 
                id="name" 
                name="name" 
                value="{{course.name}}" 
                aria-describedby="name"
            >
        </div>
        
        <div class="mb-3">
            <label for="description" class="form-label">Mô tả khóa học</label>
            <textarea 
                class="form-control" 
                id="description" 
                name="description" 
                aria-describedby="description"
            >{{course.description}}</textarea>
        </div>
        
        <div class="mb-3">
            <label for="video_id" class="form-label">Video ID:</label>
            <input 
                type="text" 
                class="form-control" 
                id="video_id" 
                name="video_id" 
                value="{{course.video_id}}" 
                aria-describedby="video_id"
            >
        </div>
        
        <div class="mb-3">
            <label for="level" class="form-label">Trình độ khóa học</label>
            <input 
                type="text" 
                class="form-control" 
                id="level" 
                name="level" 
                value="{{course.level}}" 
                aria-describedby="level"
            >
        </div>
        
        <button type="submit" class="btn btn-primary">Cập nhật</button>
    </form>
</div>
